<body>
    <div class="container">
        <h1 class="fixed-title">UK DPaaS Platform Health Status</h1>
        <ul>
            {% for email in emails %}
            <li><a href="/email/{{ loop.index0 }}">{{ email.received_time }} - {{ email.subject }}</a></li>
            {% endfor %}
        </ul>
    </div>
